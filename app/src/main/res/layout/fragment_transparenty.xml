<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.dfki.de.stickapp.fragments.TransparentyFragment">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonShoes"
            android:textOff="Shoes"
            android:textOn="Shoes"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonLips"
            android:textOff="Lips"
            android:textOn="Lips"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonEye"
            android:textOff="Eye"
            android:textOn="Eye"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonBrow"
            android:textOff="Brow"
            android:textOn="Brow"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center">

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonNose"
            android:textOff="Nose"
            android:textOn="Nose"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonHead"
            android:textOff="Head"
            android:textOn="Head"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonLimbs"
            android:textOff="Limbs"
            android:textOn="Limbs"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonBody"
            android:textOff="Body"
            android:textOn="Body"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:gravity="center">


        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonHair"
            android:textOff="Hair"
            android:textOn="Hair"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />
    </LinearLayout>


    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dsb_min="0"
        app:dsb_max="100"
        app:dsb_value="100"
        app:dsb_rippleColor = "@android:color/black"
        app:dsb_scrubberHeight="30dp"
        app:dsb_trackHeight="5dp"
        app:dsb_thumbSize="80dp"
        app:dsb_indicatorTextAppearance="@style/ToggleButtonStyle"
        app:dsb_indicatorSeparation="10dp"
        android:id="@+id/discreteSeekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="220dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/discreteSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />

</RelativeLayout>
