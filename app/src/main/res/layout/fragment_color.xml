<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.dfki.de.stickapp.fragments.ColorFragment"
    android:id="@+id/framelayout">

    <Button
        android:id="@+id/fragmentColorAppyButton"
        android:text="@string/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <app.dfki.de.stickapp.colorpicker.ColorPicker
        android:id="@+id/fragmentColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_above="@+id/fragmentColorAppyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonShoes"
            android:textOff="Shoes"
            android:textOn="Shoes"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonLips"
            android:textOff="Lips"
            android:textOn="Lips"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonEye"
            android:textOff="Eye"
            android:textOn="Eye"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonBrow"
            android:textOff="Brow"
            android:textOn="Brow"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center">

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonNose"
            android:textOff="Nose"
            android:textOn="Nose"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"/>

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonHead"
            android:textOff="Head"
            android:textOn="Head"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
             />

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonLimbs"
            android:textOff="Limbs"
            android:textOn="Limbs"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />

        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonBody"
            android:textOff="Body"
            android:textOn="Body"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:gravity="center">


        <ToggleButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButtonHair"
            android:textOff="Hair"
            android:textOn="Hair"
            android:textAppearance="@style/ToggleButtonStyle"
            android:background="@drawable/check"
            android:layout_margin="3dp"
            />
    </LinearLayout>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/fragmentColorAppyButton"
        android:layout_toStartOf="@+id/fragmentColorAppyButton"
        android:id="@+id/button" />


</RelativeLayout>
